{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "comments": "This is a consolidated linked template for deploying  4 crowdstrike playbooks",
    "author": "Sindhu Talluri,Crowdstrike"
  },
  "parameters": {
    "Service_EndPoint": {
      "defaultValue": "https://api.crowdstrike.com",
      "type": "String",
      "metadata": {
        "description": "Enter the service endpoint of crowdstrike ex: {https://crowdsrtikeurl.com}"
      }
    },
    "keyvault_Name": {
      "type": "string",
      "defaultValue": "Crowdstrikekey",
      "metadata": {
        "description": "Name of the key vault"
      }
    },
    "ClientID": {
      "type": "string",
      "defaultValue": "ClientID",
      "metadata": {
        "description": "The client Id from key vault"
      }
    },
    "ClientSecret": {
      "type": "string",
      "defaultValue": "ClientSecret",
      "metadata": {
        "description": "The client secret from key vault"
      }
    },
    "CrowdStrike_Base_Playbook_Name": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "CrowdStrike_Base",
      "metadata": {
        "description": "Name of the Logic App/Playbook"
      }
    },
    "Crowdstrike_ContainHost_Playbook_Name": {
      "defaultValue": "Crowdstrike_ContainHost",
      "type": "String",
      "metadata": {
        "description": "Name of the Logic App/Playbook"
      }
    },
    "Crowdstrike_Enrichment_GetDeviceInformation_Playbook_Name": {
      "defaultValue": "Crowdstrike_Enrichment_GetDeviceInformation",
      "type": "String",
      "metadata": {
        "description": "Name of the Logic App/Playbook"
      }
    },
    "Crowdstrike-ResponsefromTeams_Playbook_Name": {
      "defaultValue": "Crowdstrike-ResponsefromTeams",
      "type": "String",
      "metadata": {
        "description": "Name of the Logic App/Playbook"
      }
    },
    "Teams_GroupId": {
      "defaultValue": "Teams_GroupId",
      "type": "string",
      "metadata": {
        "description": "GroupId of the Team channel"
      }
    },
    "Teams_ChannelId": {
      "defaultValue": "Teams_ChannelId",
      "type": "string",
      "metadata": {
        "description": "Team ChannelId"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "linkedTemplate_CrowdStrike_Base_Playbook_Uri",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/SOAR-connectors-Private-Preview/Playbooks/CrowdStrike/Playbooks/CrowdStrike_Base/azuredeploy.json"

        },
        "parameters": {
          "LogicAppName": {
            "value": "[parameters('CrowdStrike_Base_Playbook_Name')]"
          },
          "Service_EndPoint": {
            "value": "[parameters('Service_EndPoint')]"
          },
          "ClientID": {
            "value": "[parameters('ClientID')]"
          },
          "ClientSecret": {
            "value": "[parameters('ClientSecret')]"
          },
          "keyvault_Name": {
            "value": "[parameters('keyvault_Name')]"
          }

        }
      }
    },
    {
      "name": "linkedTemplate_Crowdstrike_ContainHost_Playbook_Uri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplate_CrowdStrike_Base_Playbook_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/SOAR-connectors-Private-Preview/Playbooks/CrowdStrike/Playbooks/CrowdStrike_ContainHost/azuredeploy.json"
        },
        "parameters": {
          "CrowdStrike_Base_Playbook_Name": {
            "Value": "[parameters('CrowdStrike_Base_Playbook_Name')]"
          },
          "Playbook_Name": {
            "Value": "[parameters('Crowdstrike_ContainHost_Playbook_Name')]"
          }
        }
      }
    },
    {
      
      "name": "linkedTemplate_Crowdstrike_Enrichment_GetDeviceInfo_Playbook_Uri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplate_CrowdStrike_Base_Playbook_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/SOAR-connectors-Private-Preview/Playbooks/CrowdStrike/Playbooks/CrowdStrike_Enrichment_GetDeviceInformation/azuredeploy.json"
        },
        "parameters": {
          "Playbook_Name": {
            "Value": "[parameters('Crowdstrike_Enrichment_GetDeviceInformation_Playbook_Name')]"
          },
          "CrowdStrike_Base_Playbook_Name": {
            "Value": "[parameters('CrowdStrike_Base_Playbook_Name')]"
          }

        }
      }
    },
    {
      "name": "linkedTemplate_Crowdstrike-ResponsefromTeams_Playbook_Uri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplate_CrowdStrike_Base_Playbook_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/SOAR-connectors-Private-Preview/Playbooks/CrowdStrike/Playbooks/CrowdStrike_ResponsefromTeams/azuredeploy.json"
        },
        "parameters": {
          "Playbook_Name": {
            "Value": "[parameters('Crowdstrike-ResponsefromTeams_Playbook_Name')]"
          },
          "Teams GroupId": {
            "Value": "[parameters('Teams_GroupId')]"
          },
          "Teams ChannelId": {
            "Value": "[parameters('Teams_ChannelId')]"
          },
          "CrowdStrike_Base_Playbook_Name": {
            "Value": "[parameters('CrowdStrike_Base_Playbook_Name')]"
          }
        }
      }
    }
  ]


}
